        <%= image_tag "mars.jpg", class: "card-trip-user avatar-bordered" %>
      </div>
    </div>


    <div class="card-trip col-sm-4">
      <%= image_tag "venusa.jpg" %>
      <div class="card-trip-infos">
        <div>
          <h2> Venusa </h2>
