<%# banner %>
<div class="banner", style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('galaxy.jpg') %>);">
  <div class="container">
    <h1>Discover our spaceships</h1>
    <p>Travel with us around the galaxy</p>
    <%= render "components/search-bar" %>
    <%= link_to "All destinations", spaceships_path, class: "btn btn-outline-info btn-lg btn-block" %>
  </div>
</div>

<%# cards %>

<div class="container my-2 px-1">
<h4 class="my-3" ><strong> Hot deals! </strong></h4>
  <div class="row">
    <%= render "components/hotdeals-cards" %>
  </div>
</div>
